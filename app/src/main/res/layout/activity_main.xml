    <Button
        android:id="@+id/subject_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코스더보기>(건축/조형)" />

    <Button
        android:id="@+id/subject_7"
        android:layout_width="wrap_content"
